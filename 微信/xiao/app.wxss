page {
  background: -webkit-linear-gradient(top, #2c3144, skyblue);
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  height: 100%;
  width: 100%;
}

.page__hd {
  padding: 20px;
  text-align: center;
}

.page__bd {
  padding-bottom: 10px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 20px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/* 全局结构 & 通用样式 */

.hidden {
  display: none !important;
  overflow: hidden;
}

.section {
  background-color: white;
}

.active {
  color: #ff4f4f;
  border-bottom: 4rpx solid #ff4f4f;
}

.hover_type {
  background: rgba(245, 245, 245, 0.8);
}

/* 单行 submit 大按钮 */

.btn_main {
  height: 88rpx;
  font-size: 36rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 0 30rpx;
  border-radius: 8rpx;
}

.btn_small {
  height: 70rpx;
  width: 190rpx;
  font-size: 26rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 8rpx;
}

/*  背景颜色  */

.bg_red {
  background-color: #ff4f4f;
  color: white;
}

.bg_wheat {
  background-color: #ffd1b2;
}

.bg_green {
  background-color: #00bf4b;
  color: white;
}

.bg_yellow {
  background-color: #f91;
  color: white;
}

.bg_gray {
  background-color: #ccc;
  color: white;
}

.bg_white {
  background-color: white;
  color: #ff4f4f;
}

/*  边框颜色  */

.border_red {
  border-color: #ff4f4f;
}

.border_gray {
  border-color: #ddd;
}

.border_white {
  border: #fff;
}

/* 状态文本颜色 */

.text_bold {
  font-weight: bold;
}

.text_yellow {
  color: #f91;
}

.text_red {
  color: #ff4f4f;
}

.text_blue {
  color: #007ad8;
}

.text_gray {
  color: #999;
}

.text_green {
  color: #00bf4b;
}
